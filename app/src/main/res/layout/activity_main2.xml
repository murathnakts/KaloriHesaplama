<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape2"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape3"
        android:layout_marginTop="55dp"
        android:layout_marginStart="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtisimsoyisim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:hint="Adınız Soyadınız"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_baseline_person_search_24"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/txtcinsiyet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:hint="Erkek/Kadın"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_baseline_male_24"/>

            <EditText
                android:id="@+id/txtkiloboy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:hint="Kilo/Boy"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_baseline_fitness_center_24"/>
            <EditText
                android:id="@+id/txtusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:hint="Kullanıcı Adı"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_baseline_person_24"/>
            <EditText
                android:id="@+id/txtmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:hint="E-mailiniz"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_baseline_email_24"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/txtpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:hint="Şifreniz"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_baseline_lock_24"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btnkaydet"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:ems="10"
                android:text="Kaydet"
                android:textSize="18sp"
                android:background="@drawable/ripple1"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>